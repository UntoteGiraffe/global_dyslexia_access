{
    "manifest_version": 2,
    "name": "Dyslexic Accessibility",
    "version": "0.11",
    "description": "Replaces all fonts across the internet with OpenDyslexic",
    "content_scripts": [{
        "css": ["styles.css"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "browser_action": {
        "default_icon": {
            "16": "img/16.png",
            "24": "img/24.png",
            "32": "img/32.png"
        },
        
        "default_title": "Dyslexia Accessibility"
    }
}